@model IEnumerable<CollegeApp.Models.Course>

<h2>Courses List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Course</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Code</th>
            <th>Credits</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var course in Model)
{
    <tr>
        <td>@course.Title</td>
        <td>@course.Code</td>
        <td>@course.Credits</td>
        <td>@course.Teacher?.Name</td>
        <td>
            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
